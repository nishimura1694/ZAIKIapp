rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /bookings/{fileName} {
      allow read: if true;
      allow write: if request.resource != null &&
        request.resource.size < 5 * 1024 * 1024 &&
        request.resource.contentType.matches('^image/(jpeg|jpg|png)$') &&
        fileName.matches('^[0-9]{10,}_[0-9]+\\.jpg$');
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
